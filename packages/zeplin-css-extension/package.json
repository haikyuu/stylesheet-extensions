{
  "name": "css",
  "private": true,
  "version": "2.1.2",
  "description": "Generates CSS snippets from colors, text styles and layers.",
  "author": {
    "name": "Zeplin",
    "email": "support@zeplin.io",
    "url": "http://zeplin.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zeplin/stylesheet-extensions.git"
  },
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec",
    "publish": "zem publish"
  },
  "dependencies": {
    "zem": "^0.3.4",
    "zeplin-extension-style-kit": "^1.1.2"
  },
  "zeplin": {
    "displayName": "CSS",
    "projectTypes": [
      "web"
    ],
    "options": [
      {
        "name": "Color format",
        "type": "picker",
        "id": "colorFormat",
        "options": [
          {
            "name": "Default",
            "value": "default"
          },
          {
            "name": "HEX",
            "value": "hex"
          },
          {
            "name": "RGB",
            "value": "rgb"
          },
          {
            "name": "HSL",
            "value": "hsl"
          }
        ],
        "default": "default"
      },
      {
        "name": "Dimensions",
        "type": "switch",
        "id": "showDimensions",
        "default": true
      },
      {
        "name": "Unitless line-height",
        "type": "switch",
        "id": "unitlessLineHeight",
        "default": true
      },
      {
        "name": "Default values",
        "type": "switch",
        "id": "showDefaultValues",
        "default": true
      },
      {
        "name": "Display resources from linked and parent styleguides",
        "type": "switch",
        "id": "useLinkedStyleguides",
        "default": true
      }
    ]
  }
}
